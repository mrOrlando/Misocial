@media (max-width: 1199px) {
  html {
    font-size: 9px;
  }
}

@media (max-width: 991px) {
  html {
    font-size: 11px;
  }

  .main__menu_wrapper {
    display: none;
  }

  .main__menu-link {
    display: block !important;
  }

  .pricing__cards {
    flex-direction: column;
    align-items: center;
  }

  .pricing__cards .card {
    width: 90%;
    margin: 2rem auto;
  }

  .footer-menu {
    display: none;
  }

  .footer .row {
    justify-content: center !important;
    flex-direction: column;
  }

  .footer .social-links {
    margin: 2rem;
  }

  .footer .social-links a {
    font-size: 2.6rem !important;
  }
}
