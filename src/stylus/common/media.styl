@media (max-width 1199px)
  html
    font-size 9px

@media (max-width 991px)
  html
    font-size 11px

  .main
    &__menu-wrapper
      display none
    &__menu-link
      display block !important

  .pricing__cards 
    flex-direction column
    align-items center
    .card 
      width 90%
      margin 2rem auto
  
  .footer
    margin-bottom 2rem
    &__menu
      display none
    .row
      justify-content space-around !important
      flex-direction column
    .social-links__link
      font-size 2.6rem
