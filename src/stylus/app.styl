@import "common/*.styl"
@import "blocks/*.styl"

* {
  box-sizing: border-box;
}

html {
  font-size: 10px;
}

body {
  font-family: 'Maven Pro', sans-serif;
}

/**********************
        FOOTER
**********************/

.footer-wrap {
  display: flex;
  justify-content: center;
}

.footer {
  width: 90%;
}

.footer .row {
  height: 15vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-menu {
  width: 50%;
}

.footer .copy {
  font-size: 1.4rem;
  color: #b4b4bb;
}

.footer .line {
  height: 1px;
  background: #f2f2f3;
}

.footer .social-links a {
  text-decoration: none;
  color: #b4b4bb;
  font-size: 1.6rem;
  margin-left: 17px;
}
