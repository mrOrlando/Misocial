@import "common/*.styl"
@import "blocks/*.styl"

* {
  box-sizing: border-box;
}

html {
  font-size: 10px;
}

body {
  font-family: 'Maven Pro', sans-serif;
}

/**********************
        PRICING
**********************/

.pricing-cards {
  display: flex;
  justify-content: space-around;
}

.pricing-cards .card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 440px;
  min-height: 645px;
  padding: 6rem;
  border: 1px solid #d7dbe8;
  border-radius: 2.7rem;
  transition: all 0.3s linear;
}

.pricing-cards .card:hover {
  box-shadow: 0px 0px 81.88px 10.12px rgba(204, 204, 223, 0.71);
  border-color: #fff;
}

.pricing-cards .tariff {
  font-size: 1.4rem;
  text-transform: uppercase;
  color: #9fa4af;
  margin-top: 4rem;
  font-weight: bold;
}

.pricing-cards p {
  font-size: 1.6rem;
  line-height: 3rem;
  color: #9fa4af;
  text-align: center;
}

.pricing-cards button {
  font-size: 1.2rem;
  border-radius: 2rem;
  padding: 1.4rem 5.3rem;
  color: #c2c9db;
  border: 1px solid #c2c9db;
  background: #fff;
  text-transform: uppercase;
  box-shadow: 0px 0px 18.69px 2.31px rgba(204, 204, 223, 0.5);
  transition: all 0.3s;
}

.pricing-cards button:hover {
  background: #6e45e2;
  color: #fff;
  border-color: #6e45e2;
}

.pricing-cards .price {
  position: relative;
  font-weight: 500;
  padding-left: 1.5rem;
  color: #4f4f6f;
  font-size: 2rem;
}

.pricing-cards .price .currency {
  position: absolute;
  left: 0;
  top: 1.8rem;
}

.pricing-cards .price .value {
  font-size: 8rem;
}

/**********************
    CALL TO ACTION
**********************/

.call-to-action {
  padding: 18rem;
  color: #fff;
  text-align: center;

  background-image: -moz-linear-gradient(
    150deg,
    rgb(136, 211, 206) 0%,
    rgb(110, 69, 226) 100%
  );
  background-image: -webkit-linear-gradient(
    150deg,
    rgb(136, 211, 206) 0%,
    rgb(110, 69, 226) 100%
  );
  background-image: -ms-linear-gradient(
    150deg,
    rgb(136, 211, 206) 0%,
    rgb(110, 69, 226) 100%
  );
}

.call-to-action span {
  text-transform: uppercase;
  font-size: 1.4rem;
}

.call-to-action h4 {
  font-size: 6rem;
  margin: 0;
  font-weight: 500;
  margin: 1rem auto 2rem;
}

.call-to-action button {
  font-size: 1.2rem;
  border-radius: 2.5rem;
  width: 19rem;
  height: 5rem;
  color: #c2c9db;
  border: 1px solid #c2c9db;
  background: #fff;
  text-transform: uppercase;
  box-shadow: 0px 0px 18.69px 2.31px rgba(204, 204, 223, 0.5);
  transition: all 0.3s;
  display: inline-block;
  margin: 1rem;
}

.call-to-action button:hover {
  background: #6e45e2;
  color: #fff;
  border-color: #6e45e2;
}

/**********************
        FOOTER
**********************/

.footer-wrap {
  display: flex;
  justify-content: center;
}

.footer {
  width: 90%;
}

.footer .row {
  height: 15vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-menu {
  width: 50%;
}

.footer .copy {
  font-size: 1.4rem;
  color: #b4b4bb;
}

.footer .line {
  height: 1px;
  background: #f2f2f3;
}

.footer .social-links a {
  text-decoration: none;
  color: #b4b4bb;
  font-size: 1.6rem;
  margin-left: 17px;
}
