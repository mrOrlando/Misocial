@import 'vendor'
@import 'fonts/'
@import 'common/*'
@import 'blocks/*'

*
  box-sizing border-box

html
body
  height 100%

html
  font-size 10px

body
  font-family 'Maven Pro', sans-serif

h1
  font-size 8.6rem

h2
h3
h4
  font-size 6rem

ul
ol
  margin 0
  padding 0

button
  outline none
  background transparent
  border none

.page
  display flex
  flex-direction column
  height 100%

.content
  flex 1 0 auto

.footer
  flex 0 0 auto

.line
  height 1px
  background #f2f2f3

.row
  display flex
  justify-content space-between
  align-items center

@import 'media'
