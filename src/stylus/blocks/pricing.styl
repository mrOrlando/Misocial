.pricing
  background bg-gray
  padding 12rem 0
  &__header
    margin-bottom 10rem
  &__cards
    display flex
    justify-content space-around
    .card
      margin-left 1.5rem
      margin-right 1.5rem

  @media (min-width 1650px)
    padding 12rem

  @media (max-width 991px)
    &__cards
      flex-direction column
      align-items center
      .card
        width 90%
        margin 2rem auto

  @media (max-width 830px)
    padding 5rem 0
    &__header
      margin-bottom 0
