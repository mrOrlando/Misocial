.main
  height 770px
  color #fff
  display flex
  justify-content space-between
  flex-direction column
  align-items center
  background-image linear-gradient(
    -50deg,
    rgb(136, 211, 206) 0%,
    rgb(110, 69, 226) 100%
  )
  &__header
    width 90%
    display flex
    justify-content space-between
    height 13vh
    align-items center
  &__menu-link
    display none
    color #fff
    font-size 3.5rem
  &__menu_wrapper
    width 60%
  &__arrow
    height 100px;
    &_type_down
      width 64px
      height 64px
      line-height 70px
      background #fff
      display block
      text-align center
      border-radius 50%
      box-shadow 0px 0px 19px 2px rgba(204, 204, 223, 0.5)
